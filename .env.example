# Root password for MySQL (used by the MySQL container)
MYSQL_ROOT_PASSWORD=your_root_password_here

# Name of the MySQL database to create
MYSQL_DATABASE=your_database_name_here

# MySQL user and password for application access
MYSQL_USER=your_mysql_user_here
MYSQL_PASSWORD=your_mysql_user_password_here

# Port on which MySQL will be exposed (default is 3306)
MYSQL_PORT=3306

# Optional: Full connection string if needed by your app
MYSQL_CONNECTION_STRING=server=localhost;port=3306;database=your_database_name_here;user=your_mysql_user_here;password=your_mysql_user_password_here
